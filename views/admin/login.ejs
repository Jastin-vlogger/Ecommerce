<%-include('header')-%>

<div class="container">
    <div class="col-sm-6 col-sm-offset-3">
         
            <div class="title pb-5">
                <h2 class="font-weight-bold  text-center">Login System</h2>
                <h4 class="text-center">Log in for adminstrator</h4>
            </div>
            <form action="login" method="POST" class="pt-1">
                <div class="form-group">
                    <input type="email" 
                    id="email"
                    class="form-control " 
                    placeholder="Email" 
                    name="email"
                    value="<%=nameVal%>"
                    >  
                </div>
                <p id="error-msg"  style="color:rgb(47, 47, 170) "><%=nameError%></p>
                <div id="emailmsg"  style="color:rgb(170, 47, 47);display:none">Please fill the required</div>
                <div class="form-group mt-3">
                    <input type="password" 
                    class="form-control " 
                    name="password" 
                    placeholder="Password" >
                </div>
                <p id="error-msg"  style="color:rgb(47, 47, 170) "><%=passErr%></p>

                <button type="submit" class="btn btn-info mt-3 mx-auto">Submit</button>
            </form>

           
           
    </div>
       
            
        
    
</div>
    
<script src="/static/javascripts/validate.js"></script>

    
<%-include('footer')-%>