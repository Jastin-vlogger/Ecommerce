                <div class="container-fluid px-4">
                    <a href="/admin/add-category" class="btn btn-info float-left" >Add Category</a>
                    <div class="row my-5">
                        

                        <div class="col">
                            <table class="table bg-white rounded shadow-sm  table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col" width="50">No</th>
                                        <th scope="col">Category name</th>
                                        <th scope="col">Option</th>
                                        <th scope="col">Option</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    <% data.forEach((element,i)=>{%>
                                    <tr>    
                                        <th scope="row"><%=i+1%></th>
                                        <td><%=element.name%></td>
                                        <td><a href="/admin/edit-category/<%=element._id%>" class="btn btn-info" id="sweet" >Edit</a></td>

                                        <td><a href="/admin/delete-category/<%=element._id%>" class="btn btn-warning" id="sweet" onclick="return confirm('Are you sure to delete <%=element.name%>')">Delete</a></td>
                                    </tr>
                                    <%})%>
                                </tbody>
                            </table>
                        </div>
                        
                    </div>
                </div>
            </div>
