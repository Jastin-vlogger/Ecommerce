<%-include('header')-%>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-8 ftco-animate">
                    <form action="/editprofile" method="post" class="billing-form">
                        <h3 class="mb-4 billing-heading">EDIT</h3>

                        <div class="row align-items-end">
                            <div class="col-md-6">
                                <div class="form-group">

                                    <label for="name">First Name</label>
                                    <input type="text " name="firstName" style="font-weight: bold;"
                                        value="<%=user.firstName%>" class="form-control" placeholder="name">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="phone">Last Name</label>
                                    <input type="text" name="lastName" style="font-weight: bold;"
                                        value="<%=user.lastName%>" class="form-control fw" placeholder="phone">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="emailaddress">Email Address</label>
                                    <input  type="email" name="email" style="font-weight: bold;" value="<%=user.email%>"
                                        class="form-control" placeholder="email">

                                </div>
                            </div>

                        </div>
                        <button type="submit" class="btn btn mt-3">UPDATE</button>

                    </form>
                </div>
            </div>
    </section>

    <%-include('footer')-%>