        <script>
            function addtowhislist(proId) {
                $.ajax({
                    url:`/add-to-whislist/${proId}`,
                    method:'get',
                    success:(response)=>{
                    console.log(response);
                    if(response){
                        Swal.fire({
                        position: 'top-end',
                        icon: 'success',
                        title: 'Added to wishlist',
                        showConfirmButton: false,
                        timer: 1500
                        })
                        let count = $('#wishlist').html()
                        count = parseInt(count)+1
                        $('#wishlist').html(count)
                    }
                    }
                })
                
            }
